config broker
	list port '8942'
	option interface '{{ uplink['ifname'] }}'
	option max_cookies '250'
	option max_tunnels '250'
	option port_base '20000'
	option tunnel_id_base '100'
	option tunnel_timeout '60'
	option pmtu '0'
	option namespace 'default'
	option connection_rate_limit '10'

config log
	option filename '/dev/null'
	option verbosity 'INFO'
	option log_ip_addresses '0'

{% for mtu in tunneldigger_mtu_list %}
config bridge
	option interface 'br-digger{{mtu}}'
	option mtu '{{mtu}}'

{% endfor %}
